    "image_with_text_hCRcij": {
      "type": "image-with-text",
      "blocks": {
        "heading_Ue7eR7": {
          "type": "heading",
          "settings": {
            "heading": "CCM Total Custom Skates",
            "heading_fs": "h3"
          }
        },
        "sub_heading_nC3fPX": {
          "type": "sub_heading",
          "settings": {
            "sub_heading": "CCM has upped their skate-making game by creating custom options for all three of their skate families: Tacks, Jetspeed, and Ribcor. Are you an agile player or a power skater? With custom skate fitting, you can get the perfect dimensions for your skates and choose the exact model and specs you want, all to enhance your performance the way you want it! CCM custom skates come in two package options: Total Custom and Total Custom Plus. Both come with amazing features and are built exactly to your foot shape; Total Custom Plus just adds a few more custom choices.",
            "sub_fs": "lg"
          }
        }
      },
      "block_order": [
