    "image_with_text_WRMCpG": {
      "type": "image-with-text",
      "blocks": {
        "heading_GRjf6T": {
          "type": "heading",
          "settings": {
            "heading": "MyBauer Custom Skates",
            "heading_fs": "h3"
          }
        },
        "sub_heading_bCw9Qx": {
          "type": "sub_heading",
          "settings": {
            "sub_heading": "The Hockey Shop is one of a few stores in North America that offers a custom MyBauer Fit Station and program. If you’re looking for a pair of skates built specifically to fit your feet, custom skate fitting is a perfect option. This is also a good alternative for those with more unique foot shapes and who consistently have a hard time finding the right skates.",
            "sub_fs": "lg"
          }
        },
        "heading_J9GLzj": {
          "type": "heading",
          "settings": {
            "heading": "How It Works",
            "heading_fs": "h4"
          }
        },
        "sub_heading_zkRhDU": {
          "type": "sub_heading",
          "settings": {
            "sub_heading": "For the best experience, please contact us through email <b><a href=\"mailto:sales@thehockeyshop.com\">sales@thehockeyshop.com<\/a><\/b> or phone <b><a href=\"tel:604-589-8299\">604-589-8299<\/a><\/b> to make an appointment with one of our Skate Fitting Specialists. This part of the process lets us know you’re coming, and our Specialist can give you their full attention. They will begin by asking you a series of questions, so they can figure out what you are looking for in your hockey skates.",
            "sub_fs": "lg"
          }
        }
      },
      "block_order": [
        "heading_GRjf6T",
        "sub_heading_bCw9Qx",
        "heading_J9GLzj",
        "sub_heading_zkRhDU"
      ],
      "settings": {
        "image": "shopify:\/\/shop_images\/DSCF0146.jpg",
        "style_image": "1",
